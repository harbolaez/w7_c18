<h1>Login</h1>

<% if flash.any? %>
    <% flash.each do |ix, f_obj| %>
      <%= f_obj %>
    <% end %>
<% end %>

<%= form_tag("/login") do %>

  <%= label_tag(:email)  %>
  <%= email_field_tag :email  %>
  <br>
  <%= label_tag(:password) %>
  <%= password_field_tag(:password) %>

  <%= submit_tag "Login in" %>

<% end %>

<%= link_to "Sign Up", new_user_path %>